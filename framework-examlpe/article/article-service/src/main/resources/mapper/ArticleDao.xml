<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhaofei.framework.user.service.dao.UserDao">
    <resultMap id="userResult" type="com.zhaofei.framework.user.service.entity.UserEntity">
        <result property="id" column="id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="salt" column="salt" />
        <result property="avatarAddress" column="avatar_address" />
        <result property="loginTime" column="login_time" />
        <result property="lastLoginTime" column="last_login_time" />
        <result property="createTime" column="create_time" />
        <result property="state" column="state" />
    </resultMap>

    <select id="selectByName" resultType="com.zhaofei.framework.user.service.entity.UserEntity" parameterType="String">
        select * from user where username = #{username}
    </select>
</mapper>